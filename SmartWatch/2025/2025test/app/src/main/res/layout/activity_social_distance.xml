<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Scan interval \n(minutes)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner android:id="@+id/autoText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Duration  \nof each \nscan (seconds)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner android:id="@+id/autoTexter"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_SocialDistance_set"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Set" />

        <Button
            android:id="@+id/button_SocialDistance_get"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Get" />



    </LinearLayout>



</LinearLayout>